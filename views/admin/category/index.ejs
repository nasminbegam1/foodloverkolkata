<%- include ../includes/header_script %>

<body class="hold-transition sidebar-mini">
<div class="wrapper">

    <%- include ../includes/navbar %>

    <%- include ../includes/sidebar %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    
    <%- include ../includes/breadcrumb %>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">List</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <%- include ../errorsuccessmessage %>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                  <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                  <% if( categories.length > 0 ){ %>
                    <% categories.forEach(function(data) { %>
                    <tr>
                        <td><%= data.id %></td>
                        <td><img src="/uploads/thumb/<%= data.image %>" alt="<%= data.image %>" height="100" width="100"></td>
                        <td><%= data.name %></td>
                        <td></td>
                        <td><a href="/admin/category/update/<%= data.id %>">Edit</a> / <a href="/delete/<%= data.id %>">Delete</a></td>
                    </tr>
                    <% }); %>
                  <% } else{ %>
                    <tr><td colspan="5" align="center">No record found</td></tr>
                  <% } %>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div><!-- /.row -->
       
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  
  <%- include ../includes/footer %>

</div>
<!-- ./wrapper -->
<%- include ../includes/footer_script %>